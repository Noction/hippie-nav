    "vue-demi": "^0.14.6"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "flexsearch": "0.7.21",
    "vue": "^2.0.0 || >=3.0.0",
    "vue-router": "^4.2.2"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "web-types": "./dist/web-types.json"
