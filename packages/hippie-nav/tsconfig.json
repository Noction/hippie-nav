{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
