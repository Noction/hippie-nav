{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "src/**/*.spec.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
