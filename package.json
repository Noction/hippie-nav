{
  "name": "root",
  "version": "0.7.7",
  "type": "module",
  "scripts": {
    "dev": "pnpm -F=hippie-nav run build:light && pnpm run -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r --parallel \"/^lint:.*/\"",
    "lint:es": "pnpm -r --parallel lint:es",
    "lint:style": "pnpm -r --parallel lint:style",
    "type:check": "pnpm -r --parallel type:check",
    "test": "pnpm -r --parallel test",
    "test:coverage": "pnpm -r --parallel run test:coverage",
    "postinstall": "npx simple-git-hooks"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Noction/hippie-nav"
  },
  "homepage": "https://github.com/Noction/hippie-nav",
  "bugs": "https://github.com/Noction/hippie-nav/issues",
  "dependencies": {
    "@types/node": "^20.8.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "cross-env": "^7.0.3",
    "eslint": "9.22.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^16.16.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0"
  }
}
