    "cross-env": "^7.0.3",
    "eslint-plugin-sort-exports": "^0.8.0",
    "eslint-plugin-vue": "^9.11.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "simple-git-hooks": "^2.8.1",
